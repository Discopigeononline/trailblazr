<div class="container">
  <h1 class="my-3"><i class="fa-solid fa-file-pen"></i> Edit Itinerary</h1>
  <%= simple_form_for(@itinerary) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="d-flex justify-content-start">
      <div class="form-inputs">
        <%= f.input :title, placeholder: 'Enter title' %>
        <%= link_to "Back to Itineraries", itineraries_path, class:"btn btn-primary text-align-center"%>
        <%= f.button :submit, class: "btn btn-success"%>
      </div>
    </div>
  <% end %>
  <br>
  <%= link_to "Back", itinerary_path, class:"btn btn-primary text-align-center"%>
</div>
