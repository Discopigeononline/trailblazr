<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel"><i class="fa-solid fa-map-location-dot"></i><i class="fa-solid fa-plus fa-2xs"></i>New Itinerary</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(itinerary) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="d-flex justify-content-start">
            <div class="form-inputs">
              <%= f.input :title, placeholder: 'Enter title' %>
              <%= link_to "Back to Itineraries", itineraries_path, class:"btn btn-primary text-align-center"%>
              <%= f.button :submit, class: "btn btn-success"%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
