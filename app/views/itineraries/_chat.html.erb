<div class="chatroom" data-controller="chat-subscription">
  <h1>Chat</h1>

  <% @itinerary.messages.each do |message| %>
    <div>
      <strong><%= message.user.first_name %></strong>
      <em><%= message.created_at.strftime("%d/%m/%Y at %l:%M %p") %></em>
      <div><p><%= message.content %></p></div>
    </div>
  <% end %>

  <div>
    <%= simple_form_for [@itinerary, @message], html: {class: "d-flex"} do |f| %>
      <%= f.input :content, label: false, placeholder: "Type your message here..."%>
      <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
</div>
