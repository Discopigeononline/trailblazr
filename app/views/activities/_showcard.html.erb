  <div class="row show-card ">
    <h2> <%= @activity.name %></h2>
    <div class="col-12 d-flex">
      <div class="show-card-img">
        <img src=<%= @activity.image_url %> alt=<%= @activity.name %>>
      </div>
      <div class="show-card-description" data-controller="toggle">
        <p style="text-align: justify;"> <%= @activity.description %></p>
        <p> <i class="fa-solid fa-clock fa-xl"></i> <strong><%= @activity.duration.to_i %> hours</strong></p>
        <p> <i class="fa-solid fa-person fa-xl"></i> <strong> <%= @activity.number_of_people %></strong> </p>
        <button class="btn btn-primary" data-toggle-target="button" data-action="click->toggle#toggle">Add to an itinerary</button>

        <div class="d-none flex" data-toggle-target="form">
          <%= simple_form_for [@activity, @selection] do |f| %>
            <%= f.association :itinerary, collection: current_user.itineraries %>
            <%= f.submit "Add", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container mt-3" style="width: 100%; height: 500px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
