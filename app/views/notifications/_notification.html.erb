                <path d="M20.31 8.56a9 9 0 0 0 -1.95 -2.92" />
                <path d="M15.44 3.69a9 9 0 0 0 -3.44 -.69" />
              </svg>
            <% end %>
          <% end %>
        </div>

        <div>
          <p class="info">
            <strong><%= notification.params[:itinerary_owner].first_name %> <%= notification.params[:itinerary_owner].last_name %></strong> has added you to the itinerary
              <strong><%= link_to notification.params[:itinerary].title, itinerary_path(notification.params[:itinerary], notification_id: notification.id ) %></strong> as <em><%= notification.params[:collaboration].role.capitalize %></em>
          </p>
          <p class="received">
            <em>Received on <%= notification.created_at.to_date %></em>
          </p>
        </div>
      </div>


    </div>
  </li>
<% end %>

